{
  "name": "lute-v3",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "clean": "npx rimraf **/build && npx rimraf ./**/node_modules",
    "dev": "docker-compose -f ./docker-compose.dev.yml up",
    "dev:build": "docker-compose -f ./docker-compose.dev.yml up --build",
    "start": "docker-compose -f ./docker-compose.prod.yml up",
    "start:build": "docker-compose -f ./docker-compose.prod.yml up --build"
  },
  "devDependencies": {
    "rimraf": "^3.0.2",
    "turbo": "^1.5.3"
  }
}
